{
	"name": "cv-project",
	"version": "0.1.0",
	"private": true,
	"homepage": "http://grazomarin.github.io/cv-project",
	"dependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^13.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1",
		"sass": "^1.57.1",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"eslint:recommended"
		],
		"rules": {
			"indent": [
				1,
				2
			],
			"semi": [
				1,
				"always"
			],
			"linebreak-style": [
				0,
				"unix"
			],
			"no-use-before-define": [
				1,
				{
					"functions": false
				}
			],
			"no-unused-expressions": [
				0,
				{
					"allowTernary": true
				}
			],
			"max-len": [
				2,
				{
					"code": 80
				}
			]
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint": "^8.32.0",
		"gh-pages": "^4.0.0",
		"prettier": "^2.8.3",
		"uniqid": "^5.4.0"
	}
}
